@model FashionFlare.Models.Register

@{
    ViewData["Title"] = "User Registration";
}

<div class="container mt-3 d-flex justify-content-center">
    <div class="col-md-6 col-lg-5">
        <div class="neumorphic-card p-5 rounded">
            <h2 class="text-center mb-4" style="color: #3498db;">User Registration</h2>
            <form asp-action="Register">
                <div class="form-group">
                    <label asp-for="FirstName" class="mb-2 font-weight-bold">First Name</label>
                    <input asp-for="FirstName" class="p-2 form-control neumorphic-input rounded-pill" placeholder="Enter your first name" />
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>
                <div class="form-group mt-3">
                    <label asp-for="LastName" class="mb-2 font-weight-bold">Last Name</label>
                    <input asp-for="LastName" class="p-2 form-control neumorphic-input rounded-pill" placeholder="Enter your last name" />
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
                <div class="form-group mt-3">
                    <label asp-for="Email" class="mb-2 font-weight-bold">Email</label>
                    <input asp-for="Email" class="p-2 form-control neumorphic-input rounded-pill" placeholder="Enter your email" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group mt-3">
                    <label asp-for="Password" class="mb-2 font-weight-bold">Password</label>
                    <input asp-for="Password" class="p-2 form-control neumorphic-input rounded-pill" type="password" placeholder="Enter your password" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group mt-3">
                    <label asp-for="ConfirmPassword" class="mb-2 font-weight-bold">Confirm Password</label>
                    <input asp-for="ConfirmPassword" class="p-2 form-control neumorphic-input rounded-pill" type="password" placeholder="Re-enter your password" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>
                <div class="form-group mt-5 text-center">
                    <button type="submit" class="btn neumorphic-button rounded-pill px-5 py-3">Create Account</button>
                </div>
            </form>
         
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

