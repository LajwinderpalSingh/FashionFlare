@model FashionFlare.Models.UI.Product

@{
    Layout = "_Layout";
    ViewBag.Title = "Admin Dashboard";
}

<div class="container mt-2">
    <div class="row mb-4">
        <div class="col">
            <h1 class="fw-bold">Product Management</h1>
            <!-- Code for adding a new product -->
            <div class="mt-4">

                <button type="button" class="btn btn-success btn-lg" data-bs-toggle="modal" data-bs-target="#productModal">
                    <i class="fas fa-plus"></i> Add New Product
                </button>
                <!-- Button to add a new category -->
                <button type="button" class="btn btn-primary btn-lg ms-3" data-bs-toggle="modal" data-bs-target="#categoryModal">
                    <i class="fas fa-folder-plus"></i> Add New Category
                </button>
            </div>
        </div>
    </div>

    <!-- Products Table -->
    <div class="row">
        <div class="col">
            <form asp-action="ToggleEdit" asp-controller="Admin" method="post">
                <table class="table table-striped table-hover table-bordered">
                    <thead class="table-dark">
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">Product Name</th>
                            <th scope="col">Price</th>
                            <th scope="col">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var product in Model?.Products)
                        {
                            <tr>
                                <td>@product.ProductId</td>
                                <td>
                                    @if (ViewBag.EditId != product.ProductId)
                                    {
                                        @product.Name
                                    }
                                    else
                                    {
                                        <input type="text" name="Name" value="@product.Name" class="form-control" />
                                        <input type="hidden" name="ProductId" value="@product.ProductId" />
                                    }
                                </td>
                                <td>
                                    @if (ViewBag.EditId != product.ProductId)
                                    {
                                        @product.Price
                                    }
                                    else
                                    {
                                        <input type="text" name="Price" value="@product.Price" class="form-control" />
                                    }
                                </td>
                                <td>
                                    @if (ViewBag.EditId != product.ProductId)
                                    {
                                        <button type="submit" name="EditAction" value="Edit-@product.ProductId" class="btn btn-warning btn-sm me-2">
                                            <i class="fas fa-edit"></i> Edit
                                        </button>
                                        <button type="submit" name="EditAction" value="Delete-@product.ProductId" class="btn btn-danger btn-sm">
                                            <i class="fas fa-trash-alt"></i> Delete
                                        </button>
                                    }
                                    else
                                    {
                                        <button type="submit" name="EditAction" value="Save-@product.ProductId" class="btn btn-success btn-sm me-2">
                                            <i class="fas fa-save"></i> Save
                                        </button>
                                        <button type="submit" name="EditAction" value="Cancel" class="btn btn-secondary btn-sm">
                                            <i class="fas fa-times"></i> Cancel
                                        </button>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </form>
        </div>
    </div>
</div>

<!-- Add Product Modal -->
<div class="modal fade" id="productModal" tabindex="-1" aria-labelledby="productModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title fw-bold" id="productModalLabel">New Product</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form asp-action="SaveProduct" asp-controller="Admin" enctype="multipart/form-data" method="post">
                <div class="modal-body">
                    <div class="form-group mb-3">
                        <label asp-for="Name" class="form-label"></label>
                        <input asp-for="Name" class="form-control" placeholder="Enter product name">
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="Price" class="form-label"></label>
                        <input asp-for="Price" type="number" class="form-control" placeholder="Enter product price">
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="CategoryId" class="form-label"></label>
                        <select asp-for="CategoryId" class="form-select">
                            <option value="">Choose category...</option>
                            @if (Model?.Categories != null)
                            {
                                @foreach (var category in Model?.Categories)
                                {
                                    <option value="@category.CategoryId">@category.Name</option>
                                }
                            }
                        </select>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="ImageUrl" class="form-label">Image</label>
                        <input asp-for="ImageUrl" type="file" class="form-control">
                        <span asp-validation-for="ImageUrl" class="text-danger"></span>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary">Save Product</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Add Category Modal -->
<div class="modal fade" id="categoryModal" tabindex="-1" aria-labelledby="categoryModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title fw-bold" id="categoryModalLabel">New Category</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form asp-action="SaveCategory" asp-controller="Admin" method="post">
                <div class="modal-body">
                    <div class="form-group mb-3">
                        <label asp-for="NewCategory" class="form-label"></label>
                        <input asp-for="NewCategory" class="form-control" placeholder="Enter category name">
                        <span asp-validation-for="NewCategory" class="text-danger"></span>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary">Save Category</button>
                </div>
            </form>
        </div>
    </div>
</div>
